@model List<String>
@{string img = Context.Request.Scheme + "://" + Context.Request.Host + Url.Content("~/images/img.png");}
<div>

    <h1 style="margin-top:5px;">TODO List</h1>

    <div style="margin: 15px 20px 20px 20px;">
        @for (int i = 0; i < Model.Count; i++)
        {
            <div style="display: block;word-wrap: break-word; margin-bottom:5px;">
                @((i + 1)). @Model[i].ToString()
            </div>
        }
        <img src="@img" height="75" />


    </div>
</div>
